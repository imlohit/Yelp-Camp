<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Update Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campground/<%= campground._id %>?_method=PUT " method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title: </label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        placeholder="Enter the title" value="<%= campground.title %> ">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        placeholder="Enter the location" value="<%= campground.location %> ">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL: </label>
                    <input class="form-control" type="text" name="campground[image]" id="image"
                        placeholder="Enter the image url" value="<%= campground.image %> ">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        placeholder="Enter the description"><%= campground.description %> </textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground price:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="price-label">$</span>
                        </div>
                        <input id="price" type="text" class="form-control" name="campground[price] placeholder=" 0.00"
                            aria-label="Username" aria-describedby="price-label" value="<%= campground.price %> ">
                    </div>
                </div>
                <div class="mb-3"><button class="btn btn-info">Update Campground</button></div>

            </form>
            <a href="/campground">back to all campgrounds</a>
        </div>
    </div>