<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img
        class="card-img-top"
        src="<%= campgrounds.image %>"
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title"><%= campgrounds.title %></h5>
        <p class="card-text"><%= campgrounds.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campgrounds.location %></li>
        <li class="list-group-item text-muted">
          Submitted By: <%= campgrounds.author.username %>
        </li>
        <li class="list-group-item">$<%= campgrounds.price %>/night</li>
      </ul>
      <% if(currentUser && campgrounds.author.equals(currentUser._id)){ %>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/campground/<%= campgrounds._id %>/edit"
          class="card-link"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campground/<%= campgrounds._id %>?_method=DELETE"
          method="Post"
        >
          <button class="btn btn-danger">Delete it</button>
        </form>
        <a class="btn btn-primary" href="/campground"
          >Go back to all campgrounds</a
        >
      </div>
      <% } %>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser){ %>
    <h2>Leave a Review</h2>
    <form
      action="/campground/<%= campgrounds._id %>/reviews "
      method="POST"
      class="mb-3 needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="rating">Rating:</label>
        <input
          class="form-range"
          type="range"
          name="review[rating]"
          id="rating"
          min="1"
          max="5"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review:</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> <% for(let review of campgrounds.reviews){ %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          By <%= review.author.username %>
        </h6>
        <p class="card-text">Review: <%= review.body %></p>
        <% if(currentUser && review.author.equals(currentUser._id)){ %>
        <form
          action="/campground/<%= campgrounds._id %>/reviews/<%= review._id %>?_method=DELETE  "
          method="post"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
