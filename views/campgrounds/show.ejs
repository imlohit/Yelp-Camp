<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img class=" card-img-top" src="<%= campgrounds.image %>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campgrounds.title %>
                    </h5>
                    <p class="card-text">
                        <%= campgrounds.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campgrounds.location %>
                    </li>
                    <li class="list-group-item">$<%= campgrounds.price %>/night
                    </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campground/<%= campgrounds._id %>/edit"
                        class="card-link">Edit</a>
                    <form class="d-inline" action="/campground/<%= campgrounds._id %>?_method=DELETE" method="Post">
                        <button class="btn btn-danger">Delete it</button>
                    </form>
                    <a class="btn btn-primary" href="/campground">Go back to all campgrounds</a>
                </div>
            </div>
        </div>
    </div>